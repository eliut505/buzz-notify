{
  "name": "@reliutg/buzz-notify",
  "version": "2.1.6",
  "description": "Small and Clean JavaScript Toast Notifications",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./index.d.ts",
  "files": [
    "index.d.ts",
    "dist/**/*"
  ],
  "scripts": {
    "build": "rimraf dist && node ./scripts/build.js",
    "check-types": "tsc",
    "declaration": "tsc src/index.ts --declaration --emitDeclarationOnly --declarationDir .",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "postinstall": "git config core.hooksPath ./git-hooks"
  },
  "lint-staged": {
    "src": [
      "prettier --write",
      "eslint . --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliutgon/buzz-notify.git"
  },
  "keywords": [
    "notification",
    "toast",
    "prompt",
    "alert",
    "accessible",
    "small",
    "tiny"
  ],
  "author": "Eliut Gonz√°lez (https://twitter.com/eliutgon)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliutgon/buzz-notify/issues"
  },
  "homepage": "https://github.com/eliutgon/buzz-notify#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "esbuild": "0.13.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "lint-staged": "^11.2.0",
    "prettier": "^2.4.1",
    "rimraf": "3.0.2",
    "typescript": "4.4.3"
  }
}
