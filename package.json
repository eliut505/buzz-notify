{
  "name": "@reliutg/buzz-notify",
  "version": "2.5.4",
  "description": "Small and Clean JavaScript Toast Notifications",
  "jsdelivr": "./dist/index.js",
  "browser": "./dist/index.js",
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "types": "./index.d.ts",
  "files": [
    "index.d.ts",
    "dist/**/*"
  ],
  "scripts": {
    "build": "rimraf dist && node ./scripts/build.js",
    "declaration": "tsc src/index.ts --declaration --emitDeclarationOnly --declarationDir .",
    "prepare": "npm run build",
    "version": "npm run declaration && git add -A src",
    "postversion": "git push && git push --tags",
    "git-hooks": "git config core.hooksPath ./git-hooks"
  },
  "lint-staged": {
    "src": [
      "prettier --write",
      "eslint . --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliutdev/buzz-notify.git"
  },
  "keywords": [
    "notification",
    "toast",
    "prompt",
    "alert",
    "accessible",
    "small",
    "tiny"
  ],
  "author": "Eliut Gonz√°lez (https://twitter.com/eliutdev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliutdev/buzz-notify/issues"
  },
  "homepage": "https://github.com/eliutdev/buzz-notify#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "esbuild": "0.14.49",
    "eslint": "^8.19.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "3.0.2",
    "typescript": "4.7.4"
  }
}
